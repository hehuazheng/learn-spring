<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="study.dao.mapper.Tb1Mapper" >
	<select id="selectAll" resultType="study.dao.model.Tb1">
		select id, col1 from tb1 where status=0
	</select>
	
	<update id="updateStatusById" parameterType="java.lang.Integer">
		update tb1 set status=1 where id=#{id}
	</update>
</mapper>