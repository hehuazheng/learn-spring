<!--         <property name="maxConcurrentConsumers" value="2"></property> -->
<!--         <property name="messageListener" ref="queueOneListener"></property> -->
<!--     </bean> -->
    
    <rabbit:listener-container connection-factory="connectionFactory" acknowledge="auto" concurrency="2" prefetch="2">
        <rabbit:listener queues="queue_one" ref="queueOneListener"/>
    </rabbit:listener-container>
</beans>