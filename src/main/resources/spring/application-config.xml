<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		      http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
		      http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<context:annotation-config />
	<context:component-scan base-package="study"></context:component-scan>

	<bean id="interceptor1" class="study.aop.MyMethodInterceptor1" />
	<bean id="interceptor2" class="study.aop.MyMethodInterceptor2" />
	<aop:config proxy-target-class="true">
		<aop:advisor advice-ref="interceptor1" pointcut="@annotation(study.annotation.Interceptor1)" />
		<aop:advisor advice-ref="interceptor2" pointcut="@annotation(study.annotation.Interceptor2)" />
	</aop:config>
